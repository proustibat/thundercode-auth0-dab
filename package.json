        "@tanstack/react-router": "^1.112.12",
        "@tanstack/react-router-devtools": "^1.120.13",
        "@tanstack/zod-form-adapter": "^0.42.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "redaxios": "^0.5.1",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@tanstack/router-cli": "^1.112.12",
        "@tanstack/router-vite-plugin": "^1.112.12",
