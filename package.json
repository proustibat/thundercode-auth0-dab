        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.13.9",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^3.0.7",
        "@vitest/ui": "^3.0.7",
        "husky": "^9.1.7",
        "jsdom": "^26.0.0",
        "lint-prepush": "^3.0.2",
        "lint-staged": "^15.4.3",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2",
        "vite": "^6.2.0",
        "vitest": "^3.0.7",
        "vitest-preview": "^0.0.1"
    }
